---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Card from '../components/Card.astro';
---

<!doctype html>
<html lang="en">
<head>
  <BaseHead/>
</head>
<body class="bg-light-background">
<Header/>
<div
    class="w-full flex flex-col items-center justify-center p-6 pt-8 xl:p-10 xl:pb-0 xl:pt-8 text-light-text">
  <div class="w-full flex flex-col xl:flex-row items-center xl:items-start justify-center">
    <div
        class="w-10/12 xl:w-8/12 flex flex-col xl:flex-row xl:flex-wrap items-center xl:items-start justify-center xl:justify-between xl:justify-end md:mx-5">
      <Card>
        <p class="text-center text-2xl font-black">Profile</p>
        <div class="lg:flex lg:items-center p-6">
          <img class="h-32 w-32 rounded-full mx-auto mb-6 lg:mb-0 lg:mx-0 lg:mr-6 flex-shrink-0"
               src="/img/ava-brand.jpg">
          <div class="text-center lg:text-left">
            <p class="text-lg font-bold">Louis Jones</p>
            <p class="text-accent-solid">Developer Experience Engineer / Java Spring Developer</p>
            <p>Get in touch: <span id="contact-form-button"
                                   class="cursor-pointer text-accent-solid hover:underline font-bold">Contact Form</span>
            </p>
            <p>GitHub: <a class="text-accent-solid hover:underline font-bold"
                          href="https://ljon.es/gh">The-Jonsey</a>
            </p>
          </div>
        </div>
      </Card>
      <Card>
        <p class="text-center text-2xl font-black">Projects</p>
        <div
            class="w-full flex flex-row justify-start md:justify-between md:flex-row p-6">
          <div class="w-[49%] rounded p-2 my-2">
            <a class="font-bold text-accent-solid hover:underline"
               href="https://github.com/unix-streamdeck/streamdeckd">streamdeckd</a>
            <p class="text-light-gray text-sm">A golang streamdeck daemon with d-bus support</p>
            <p class="text-light-gray text-sm">Languages: <span class="font-bold">Golang</span></p>
          </div>
          <div class="w-[49%] rounded p-2 mt-2">
            <a class="font-bold text-accent-solid hover:underline"
               href="https://github.com/unix-streamdeck/streamdeckui">streamdeck-editor</a>
            <p class="text-light-gray text-sm">An editor built on Fyne for <a
                href="https://github.com/unix-streamdeck/streamdeckd"
                class="text-accent-solid hover:underline">streamdeckd</a></p>
            <p class="text-light-gray text-sm">Languages: <span class="font-bold">Golang</span></p>
          </div>
        </div>
      </Card>
      <Card>
        <p class="text-center text-2xl font-black">Skills</p>
        <div class="w-full flex justify-start flex-row flex-wrap pt-6 text-left">
          <div class="w-1/2 lg:w-1/3 mb-2">
            <p class="font-bold text-lg">Java</p>
            <ul class="list-disc">
              <li class="ml-4 bullet-red ">Spring MVC</li>
              <li class="ml-4 bullet-red ">Lombok</li>
              <li class="ml-4 bullet-red ">Mockito</li>
              <li class="ml-4 bullet-red ">JUnit</li>
              <li class="ml-4 bullet-red ">Netflix Stack</li>
            </ul>
          </div>
          <div class="w-1/2 lg:w-1/3 mb-2">
            <p class="font-bold text-lg">JavaScript</p>
            <ul class="list-disc">
              <li class="ml-4 bullet-red ">Node</li>
              <li class="ml-4 bullet-red ">React</li>
              <li class="ml-4 bullet-red ">ExpressJS</li>
              <li class="ml-4 bullet-red ">ES6</li>
              <li class="ml-4 bullet-red ">jQuery</li>
            </ul>
          </div>
          <div class="w-1/2 lg:w-1/3 mb-2">
            <p class="font-bold text-lg">DevOps</p>
            <ul class="list-disc">
              <li class="ml-4 bullet-red ">Jenkins (Writing and maintaining Pipeline Libraries)</li>
              <li class="ml-4 bullet-red ">AWS</li>
              <li class="ml-4 bullet-red ">AWS CDK</li>
              <li class="ml-4 bullet-red ">Linux</li>
              <li class="ml-4 bullet-red ">Sonatype Nexus</li>
              <li class="ml-4 bullet-red ">Docker</li>
            </ul>
          </div>
          <div class="w-1/2 lg:w-1/3 mb-2 lg:mb-0">
            <p class="font-bold text-lg">Databases</p>
            <ul class="list-disc">
              <li class="ml-4 bullet-red ">RDS</li>
              <li class="ml-4 bullet-red ">MySQL</li>
              <li class="ml-4 bullet-red ">PostgreSQL</li>
              <li class="ml-4 bullet-red ">SQLite</li>
              <li class="ml-4 bullet-red ">MSSQL</li>
            </ul>
          </div>
          <div class="w-1/2 lg:w-1/3 mb-2 lg:mb-0">
            <p class="font-bold text-lg">Tools</p>
            <ul class="list-disc">
              <li class="ml-4 bullet-red ">git</li>
              <li class="ml-4 bullet-red ">Jira</li>
              <li class="ml-4 bullet-red ">Command Line</li>
            </ul>
          </div>
        </div>
      </Card>
      <Card>
        <p class="text-center text-2xl font-black">Experience</p>
        <div
            class="w-full flex flex-col justify-start md:justify-between md:flex-row md:flex-wrap p-6 text-left">
          <div class="w-full mb-4 flex">
            <div class="w-1/2 mb-4 p-1">
              <p class="font-bold text-md">Charlesworth Commercial Properties Ltd</p>
              <ul class="list-disc">
                <li class="ml-4 bullet-red">Freelance</li>
                <li class="ml-4 bullet-red">2nd half 2017</li>
              </ul>
            </div>
            <div class="w-1/2 mb-4 p-1">
              <p class="font-bold text-md">NPE Maintenance Ltd</p>
              <ul class="list-disc">
                <li class="ml-4 bullet-red">Frontend Developer</li>
                <li class="ml-4 bullet-red">Feb 2018 - Sept 2018</li>
              </ul>
            </div>
          </div>
          <div class="w-full flex">
            <div class="w-1/2 p-1">
              <p class="font-bold text-md">Elder Studios Ltd</p>
              <ul class="list-disc">
                <li class="ml-4 bullet-red">Placement Back End Developer</li>
                <li class="ml-4 bullet-red">May 2019 - May 2020</li>
                <li class="ml-4 bullet-red">Junior Back End Developer</li>
                <li class="ml-4 bullet-red">May 2020 - June 2021</li>
              </ul>
            </div>
            <div class="w-1/2 p-1">
              <p class="font-bold text-md">EVRi (Formerly Hermes Parcelnet Ltd)</p>
              <ul class="list-disc">
                <li class="ml-4 bullet-red">Back End Developer</li>
                <li class="ml-4 bullet-red">June 2021 - Jan 2022</li>
                <li class="ml-4 bullet-red">Senior Back End Developer</li>
                <li class="ml-4 bullet-red">Jan 2022 - Jan 2024</li>
                <li class="ml-4 bullet-red">Lead DevEx Developer</li>
                <li class="ml-4 bullet-red">Jan 2024 - Present</li>
              </ul>
            </div>
          </div>
        </div>
      </Card>
    </div>
  </div>
</div>
<div
    class="w-full h-full top-0 left-0 fixed hidden items-center justify-center bg-black bg-opacity-50"
    id="contact-form">
  <div class="rounded w-full lg:w-8/12 h-auto p-10 shadow-lg mb-6 p-10 bg-light-panel">
    <h1 class="text-4xl font-bold text-accent-solid">Get in touch</h1>
    <hr class="border-accent-solid">
    <!-- @ts-ignore -->
    <form class="p-4 pt-8" name="Contact" netlify action="/">
      <div class="flex flex-row flex-wrap w-full my-2">
        <div class="w-1/2 p-4">
          <label class="text-white block pb-2">Name:</label>
          <input class="rounded w-full mb-4 p-2 shadow-lg" type="text" name="Name"
                 placeholder="Name">
        </div>
        <div class="w-1/2 p-4">
          <label class="text-white block pb-2">Email:</label>
          <input class="rounded w-full mb-4 p-2 shadow-lg" type="text" name="Email"
                 placeholder="Email">
        </div>
        <div class="w-full p-4">
          <label class="text-white block pb-2 shadow-lg">Message:</label>
          <textarea name="Message" rows="3" class="w-full rounded p-2 resize-none"></textarea>
        </div>
      </div>
      <button id="contact-form-close" type="submit"
              class="bg-accent-solid px-4 py-2 text-white rounded shadow-lg border border-white">
        Submit
      </button>
    </form>
  </div>
</div>
<script>
  let form = document.getElementById("contact-form")

  document.getElementById("contact-form-button").onclick = () => {
    form.classList.remove("hidden");
    form.classList.add("flex");
  };

  document.getElementById("contact-form-close").onclick = () => {
    form.classList.remove("flex");
    form.classList.add("hidden");
  };


  form.onclick = (e) => {
    //@ts-ignore
    if (e.target.id === "contact-form") {
      form.classList.remove("flex")
      form.classList.add("hidden")
    }
  };

</script>
</body>
</html>
